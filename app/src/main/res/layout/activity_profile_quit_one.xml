<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <ImageView
            android:id="@+id/btn_profile_quit_for_sure_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:src="@drawable/ic_arrow_left"
            app:layout_constraintBottom_toBottomOf="@id/tv_profile_quit_for_sure_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_profile_quit_for_sure_title" />

        <TextView
            android:id="@+id/tv_profile_quit_for_sure_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:paddingVertical="15dp"
            android:text="@string/profile_quit_for_sure_tv_title"
            android:textAppearance="?textAppearanceSubtitle1"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/btn_profile_quit_for_sure_back"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:overScrollMode="never"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_quit_for_sure_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_profile_manage_for_sure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="84dp">

                <ImageView
                    android:id="@+id/iv_profile_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/ic_warning"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_profile_quit_for_sure_subtitle_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.Yello.Headline00"
                    android:lineHeight="40dp"
                    android:text="@string/profile_quit_for_sure_tv_subtitle_1"
                    android:textColor="@color/yello_main_500"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_profile_warning" />

                <TextView
                    android:id="@+id/tv_profile_quit_for_sure_subtitle_2_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:lineHeight="28dp"
                    android:text="@string/profile_quit_for_sure_tv_subtitle_2_top"
                    android:textAppearance="?textAppearanceBodySmall"
                    android:textColor="@color/grayscales_500"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_profile_quit_for_sure_subtitle_1" />

                <TextView
                    android:id="@+id/tv_profile_quit_for_sure_subtitle_2_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:lineHeight="28dp"
                    android:text="@string/profile_quit_for_sure_tv_subtitle_2_bottom"
                    android:textAppearance="?textAppearanceBodySmall"
                    android:textColor="@color/grayscales_500"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_profile_quit_for_sure_subtitle_2_top" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_profile_quit_upper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/shape_grayscales900_fill_12_rect"
                    android:paddingBottom="26dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_profile_quit_for_sure_subtitle_2_bottom">

                    <TextView
                        android:id="@+id/tv_profile_upper_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="26dp"
                        android:lineHeight="36dp"
                        android:text="@string/profile_quit_upper_title"
                        android:textAppearance="?textAppearanceSubtitle1"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_profile_upper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:src="@drawable/ic_point_zero"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_profile_upper_title" />

                    <TextView
                        android:id="@+id/tv_profile_upper_body_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:lineHeight="22dp"
                        android:text="@string/profile_quit_upper_body_1"
                        android:textAppearance="?textAppearanceLabelMedium"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_profile_upper" />

                    <TextView
                        android:id="@+id/tv_profile_upper_body_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineHeight="22dp"
                        android:text="@string/profile_quit_upper_body_2"
                        android:textAppearance="?textAppearanceLabelMedium"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"

                        app:layout_constraintTop_toBottomOf="@id/tv_profile_upper_body_1" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_profile_quit_lower"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/shape_grayscales900_fill_12_rect"
                    android:paddingBottom="36dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_profile_quit_upper">

                    <TextView
                        android:id="@+id/tv_profile_quit_for_sure_reason_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="36dp"
                        android:gravity="center"
                        android:paddingVertical="4dp"
                        android:text="@string/profile_quit_for_sure_tv_reason_1"
                        android:textAppearance="?textAppearanceSubtitle1"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_profile_quit_for_sure_reason_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="42dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/ic_quit_for_sure_1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_profile_quit_for_sure_reason_1" />

                    <TextView
                        android:id="@+id/tv_profile_quit_for_sure_reason_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="40dp"
                        android:gravity="center"
                        android:paddingVertical="4dp"
                        android:text="@string/profile_quit_for_sure_tv_reason_2"
                        android:textAppearance="?textAppearanceSubtitle1"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_profile_quit_for_sure_reason_1" />

                    <ImageView
                        android:id="@+id/iv_profile_quit_for_sure_reason_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="42dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/ic_quit_for_sure_2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_profile_quit_for_sure_reason_2" />

                    <TextView
                        android:id="@+id/tv_profile_quit_for_sure_reason_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="40dp"
                        android:gravity="center"
                        android:lineHeight="36dp"
                        android:paddingVertical="4dp"
                        android:text="@string/profile_quit_for_sure_tv_reason_3"
                        android:textAppearance="?textAppearanceSubtitle1"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_profile_quit_for_sure_reason_2" />

                    <ImageView
                        android:id="@+id/iv_profile_quit_for_sure_reason_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="42dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/ic_quit_for_sure_3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_profile_quit_for_sure_reason_3" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/btn_profile_quit_resume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/shape_black_fill_grayscales700_line_100_rect"
                    android:gravity="center"
                    android:paddingVertical="16dp"
                    android:text="@string/profile_quit_btn_resume"
                    android:textColor="@color/grayscales_500"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_profile_quit_lower" />

                <TextView
                    android:id="@+id/btn_profile_quit_return"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="34dp"
                    android:background="@drawable/shape_grayscales800_fill_100_rect"
                    android:gravity="center"
                    android:paddingVertical="16dp"
                    android:text="@string/profile_quit_btn_return"
                    android:textColor="@color/yello_main_500"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_profile_quit_resume" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>