                    app:layout_constraintStart_toEndOf="@id/layout_note_blank_name"
                    app:layout_constraintTop_toTopOf="@id/layout_note_blank_name"
                    tools:text="이(가)" />

                <TextView
                    android:id="@+id/tv_note_second_sentence_head"
