<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.main.yello.vote.note.NoteFragment">

    <data>
        <variable
            name="index"
            type="Integer" />

        <variable
            name="bgIndex"
            type="Integer" />

        <variable
            name="vm"
            type="com.el.yello.presentation.main.yello.vote.VoteViewModel" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_note"
        setVoteBackground="@{bgIndex}"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@drawable/shape_gradient_vote_bg_01">

        <LinearLayout
            android:id="@+id/layout_note_progress_bar"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/shape_white35_fill_20_rect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/view_note_progress"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@{index + 1}"
                android:background="@drawable/shape_white_fill_8_rect"
                tools:layout_weight="1" />

            <View
                android:id="@+id/view_note_progress_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@{7 - index}"
                tools:layout_weight="7" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_note_components"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_note_progress_bar">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_note_balloon"
                setBalloonSrc="@{index}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:minHeight="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/lottie_note_balloon1"
                app:lottie_repeatMode="restart" />

            <LinearLayout
                android:id="@+id/layout_note_progress_before"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="10dp"
                android:gravity="end"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@id/iv_note_face"
                app:layout_constraintEnd_toStartOf="@id/iv_note_face"
                app:layout_constraintTop_toTopOf="@id/iv_note_face" />

            <ImageView
                android:id="@+id/iv_note_face"
                setFaceSrc="@{index}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_note_face1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lottie_note_balloon" />

            <LinearLayout
                android:id="@+id/layout_note_progress_after"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@id/iv_note_face"
                app:layout_constraintStart_toEndOf="@id/iv_note_face"
                app:layout_constraintTop_toTopOf="@id/iv_note_face" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_note_question"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_black_fill_32_rect"
                android:minHeight="154dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_note_face">

                <TextView
                    android:id="@+id/tv_note_first_sentence_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_pretendard_bold"
                    android:text="@{vm._voteList.get(vm.currentNoteIndex).nameHead}"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="@id/layout_note_blank_name"
                    app:layout_constraintEnd_toStartOf="@id/layout_note_blank_name"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/layout_note_blank_name"
                    tools:text="나는" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_note_blank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/shape_grayscales900_fill_grayscales700_dashline_8_rect"
                    android:padding="1dp"
                    app:flow_verticalGap="100dp"
                    app:layout_constraintBottom_toTopOf="@id/layout_note_blank_keyword"
                    app:layout_constraintEnd_toStartOf="@id/tv_note_first_sentence_foot"
                    app:layout_constraintStart_toEndOf="@id/tv_note_first_sentence_head"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed">

                    <TextView
                        android:id="@+id/tv_note_name_invisible1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/yello_main_500"
                        android:lineSpacingExtra="24sp"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="7dp"
                        android:rotation="-3"
                        android:text="@{vm._voteList.get(vm.currentNoteIndex).friendList.get(0).name}"
                        android:textAppearance="?textAppearanceBodyLarge"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="김효원" />

                    <TextView
                        android:id="@+id/tv_note_name_invisible2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/yello_main_500"
                        android:lineSpacingExtra="24sp"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="7dp"
                        android:rotation="-3"
                        android:text="@{vm._voteList.get(vm.currentNoteIndex).friendList.get(1).name}"
                        android:textAppearance="?textAppearanceBodyLarge"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="권세훈" />

                    <TextView
                        android:id="@+id/tv_note_name_invisible3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/yello_main_500"
                        android:lineSpacingExtra="24sp"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="7dp"
                        android:rotation="-3"
                        android:text="@{vm._voteList.get(vm.currentNoteIndex).friendList.get(2).name}"
                        android:textAppearance="?textAppearanceBodyLarge"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="이강민" />

                    <TextView
                        android:id="@+id/tv_note_name_invisible4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/yello_main_500"
                        android:lineSpacingExtra="24sp"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="7dp"
                        android:rotation="-3"
                        android:text="@{vm._voteList.get(vm.currentNoteIndex).friendList.get(3).name}"
                        android:textAppearance="?textAppearanceBodyLarge"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:Text="이의제" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_note_name_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:background="@color/yello_main_500"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="7dp"
                    android:rotation="-3"
