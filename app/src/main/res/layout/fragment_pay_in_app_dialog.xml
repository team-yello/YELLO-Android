<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_pay_in_app_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/shape_grayscales900_fill_12_rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_pay_dialog_subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:gravity="center"
            android:maxHeight="32dp"
            android:paddingVertical="3dp"
            android:textAppearance="?textAppearanceSubtitle2"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/pay_dialog_in_app_title_1" />

        <TextView
            android:id="@+id/tv_pay_dialog_subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxHeight="22dp"
            android:paddingVertical="2dp"
            android:text="@string/pay_dialog_in_app_subtitle"
            android:textAppearance="?textAppearanceLabelMedium"
            android:textColor="@color/grayscales_400"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_pay_dialog_subtitle1" />

        <ImageView
            android:id="@+id/iv_pay_in_app"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="@id/tv_pay_dialog_subtitle2"
            app:layout_constraintStart_toStartOf="@id/tv_pay_dialog_subtitle2"
            app:layout_constraintTop_toBottomOf="@id/tv_pay_dialog_subtitle2"
            tools:src="@drawable/img_pay_in_app_1" />

        <TextView
            android:id="@+id/btn_pay_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="14dp"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="@string/pay_dialog_confirm"
            android:textAppearance="?textAppearanceBodySmall"
            android:textColor="@color/grayscales_300"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_pay_in_app" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>