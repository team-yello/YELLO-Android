<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_my_yello"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/grayscales_900"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_look_gender"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_look_gender"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_look_gender"
                tools:src="@drawable/ic_yello_blue" />

            <TextView
                android:id="@+id/tv_look_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:paddingVertical="4dp"
                android:textAppearance="@style/TextAppearance.Yello.Body02"
                android:textColor="@color/grayscales_300"
                app:layout_constraintStart_toEndOf="@id/iv_look_gender"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="남학생" />

            <ImageView
                android:id="@+id/iv_look_gender_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_look_right_arrow"
                app:layout_constraintBottom_toBottomOf="@id/tv_look_gender"
                app:layout_constraintStart_toEndOf="@id/tv_look_gender"
                app:layout_constraintTop_toTopOf="@id/tv_look_gender" />

            <TextView
                android:id="@+id/tv_look_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:paddingVertical="4dp"
                android:textAppearance="@style/TextAppearance.Yello.Body02"
                android:textColor="@color/grayscales_300"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/iv_look_gender_arrow"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="김상호" />

            <TextView
                android:id="@+id/tv_look_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="16dp"
                android:textAppearance="@style/TextAppearance.Yello.LabelSmall"
                android:textColor="@color/grayscales_600"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1시간 전" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_look_body"
                android:layout_width="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="23dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_look_gender"
                app:layout_constraintTop_toBottomOf="@id/tv_look_gender">

                <TextView
                    android:id="@+id/tv_name_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:paddingEnd="4dp"
                    android:textAppearance="@style/TextAppearance.Yello.BodyLarge"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="술자리에서" />

                <TextView
                    android:id="@+id/tv_name_middle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:text="@string/my_yello_you"
                    android:textAppearance="@style/TextAppearance.Yello.BodyLarge"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toEndOf="@id/tv_name_head"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_name_foot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:textAppearance="@style/TextAppearance.Yello.BodyLarge"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintStart_toEndOf="@id/tv_name_middle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_goneMarginTop="0dp"
                    tools:text="가" />

                <TextView
                    android:id="@+id/tv_keyword_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="2dp"
                    android:paddingEnd="6dp"
                    android:textAppearance="@style/TextAppearance.Yello.BodyLarge"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_name_middle"
                    tools:text="사라진다면" />

                <TextView
                    android:id="@+id/tv_keyword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_grayscales800_fill_grayscales700_dashline_4_rect"
                    android:paddingVertical="1dp"
                    android:textAppearance="@style/TextAppearance.Yello.Subtitle02"
                    android:textColor="@color/grayscales_800"
                    app:layout_constraintBottom_toBottomOf="@id/tv_keyword_foot"
                    app:layout_constraintStart_toEndOf="@id/tv_keyword_head"
                    app:layout_constraintTop_toBottomOf="@id/tv_name_middle"
                    tools:text="달빛산책 간거" />

                <TextView
                    android:id="@+id/tv_keyword_foot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingVertical="2dp"
                    android:textAppearance="@style/TextAppearance.Yello.BodyLarge"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toEndOf="@id/tv_keyword"
                    app:layout_constraintTop_toBottomOf="@id/tv_name_middle"
                    app:layout_goneMarginStart="0dp"
                    tools:text="(이)야" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>