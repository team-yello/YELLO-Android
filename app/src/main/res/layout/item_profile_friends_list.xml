<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:background="@color/black">

    <ImageView
        android:id="@+id/iv_profile_friend_item_thumbnail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="-19dp"
        android:src="@drawable/ic_main_yello_active"
        app:layout_constraintBottom_toBottomOf="@id/tv_profile_friend_item_name"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_profile_friend_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="17dp"
        android:paddingVertical="1dp"
        android:textAppearance="@style/TextAppearance.Yello.Subtitle01"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/iv_profile_friend_item_thumbnail"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="김상호" />

    <TextView
        android:id="@+id/tv_profile_friend_item_school"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="17dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingVertical="2dp"
        android:textAppearance="@style/TextAppearance.Yello.LabelMedium"
        android:textColor="@color/grayscales_600"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_profile_friend_item_thumbnail"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_friend_item_name"
        tools:text="고려대학교 산업경영공학부 19학번" />

</androidx.constraintlayout.widget.ConstraintLayout>

